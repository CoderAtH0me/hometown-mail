<odoo>
    <data noupdate="1"> <!-- noupdate="1" means records won't be updated on module update -->
        <record id="mailbox_inbox" model="portal.email.mailbox">
            <field name="name">Inbox</field>
            <field name="mailbox_type">inbox</field>
        </record>
        <record id="mailbox_sent" model="portal.email.mailbox">
            <field name="name">Sent</field>
            <field name="mailbox_type">sent</field>
        </record>
        <record id="mailbox_drafts" model="portal.email.mailbox">
            <field name="name">Drafts</field>
            <field name="mailbox_type">drafts</field>
        </record>
        <record id="mailbox_spam" model="portal.email.mailbox">
            <field name="name">Spam</field>
            <field name="mailbox_type">spam</field>
        </record>
        <record id="mailbox_trash" model="portal.email.mailbox">
            <field name="name">Trash</field>
            <field name="mailbox_type">trash</field>
        </record>
    </data>
</odoo>